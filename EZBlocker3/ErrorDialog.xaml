<Window x:Class="EZBlocker3.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:utils="clr-namespace:EZBlocker3.Utils"
        xmlns:local="clr-namespace:EZBlocker3"
        mc:Ignorable="d"
        Title="Error"
        SizeToContent="WidthAndHeight" ResizeMode="NoResize"
        ShowInTaskbar="False" WindowStyle="ToolWindow"
        ui:WindowHelper.UseModernWindowStyle="True" utils:WindowHelper.ApplySizeToContentFix="True">
    <ui:SimpleStackPanel Orientation="Vertical" Margin="10" Spacing="10">
        <ui:SimpleStackPanel Orientation="Horizontal">
            <ui:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE783;" FontSize="30" Margin="0 0 10 0" />
            <TextBlock x:Name="textBox" VerticalAlignment="Center" HorizontalAlignment="Left" />
        </ui:SimpleStackPanel>
        <ui:SimpleStackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button x:Name="dismissButton" Content="Dismiss" />
        </ui:SimpleStackPanel>
    </ui:SimpleStackPanel>
</Window>
