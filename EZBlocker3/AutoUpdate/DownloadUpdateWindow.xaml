<Window x:Class="EZBlocker3.AutoUpdate.DownloadUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:EZBlocker3"
        mc:Ignorable="d"
        Title="EZBlocker Updater" Height="140" Width="350" ResizeMode="NoResize" ShowInTaskbar="False"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Grid Margin="10 5 10 10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ui:ProgressBar Grid.Row="0" x:Name="downloadProgress" Height="20" />
        <TextBlock Grid.Row="2" x:Name="downloadState" Text="Downloading..." />
        <Button Grid.Row="4" x:Name="abortDownloadButton" Content="Abort" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
    </Grid>
</Window>
